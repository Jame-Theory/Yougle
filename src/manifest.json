{
  "manifest_version": 3,
  "name": "Yougle",
  "version": "1.0",
  "description": "Hides YouTube recommended videos and distractions.",
  "permissions": ["storage", "scripting"],
  "action": {
    "default_title": "Yougle",
    "default_popup": "hello.html",
    "default_icon": "icon.jpeg"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_hider.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon.jpeg",
    "48": "icon.jpeg",
    "128": "icon.jpeg"
  }
}